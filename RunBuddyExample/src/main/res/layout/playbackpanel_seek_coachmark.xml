<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="@dimen/padding_verysmall"
              android:orientation="vertical"
              android:clickable="true">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/padding_medium"
                  android:background="@color/coach_mark_background">

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:text="@string/playbackpanel_seek_coachmark"
                  android:textColor="@color/primary_textcolor_inverted"
                  android:textSize="@dimen/text_size_small"/>

        <ImageView android:id="@+id/close_button"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:padding="8dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_navigation_close"
                   android:background="@drawable/selectable_background_tomahawk"/>

    </LinearLayout>

    <View android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginBottom="-16dp"
          android:layout_marginLeft="12dp"
          android:rotation="90"
          android:background="@drawable/triangle_blacktransparent"/>

</LinearLayout>