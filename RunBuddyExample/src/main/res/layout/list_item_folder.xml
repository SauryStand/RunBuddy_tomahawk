<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/list_item_track_height"
              android:baselineAligned="false"
              android:orientation="horizontal"
              android:descendantFocusability="afterDescendants"
              android:background="@drawable/selectable_background_tomahawk">

    <ImageView android:id="@+id/browsable_indicator"
               android:layout_width="@dimen/directory_chooser_arrow_size"
               android:layout_height="@dimen/directory_chooser_arrow_size"
               android:layout_gravity="center"
               android:layout_marginRight="@dimen/padding_medium"
               android:layout_marginLeft="@dimen/padding_small"/>

    <TextView android:id="@+id/textview1"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:paddingTop="@dimen/padding_medium"
              android:paddingBottom="@dimen/padding_medium"
              android:gravity="center_vertical"
              android:singleLine="true"
              android:textColor="@color/primary_textcolor"
              android:textSize="@dimen/text_size_medium"/>

    <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/padding_megalarge"/>

    <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/padding_megalarge"
            android:visibility="gone"/>

</LinearLayout>