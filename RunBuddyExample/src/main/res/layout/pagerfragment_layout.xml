<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fragment_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ViewStub android:id="@+id/imageview_grid_one_pager_stub"
              android:inflatedId="@+id/imageview_grid_one_pager"
              android:layout="@layout/imageview_grid_one_content_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <ViewStub android:id="@+id/imageview_grid_two_pager_stub"
              android:inflatedId="@+id/imageview_grid_two_pager"
              android:layout="@layout/imageview_grid_two_content_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <ViewStub android:id="@+id/imageview_grid_three_pager_stub"
              android:inflatedId="@+id/imageview_grid_three_pager"
              android:layout="@layout/imageview_grid_three_content_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/fragmentpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <org.runbuddy.tomahawk_android.views.Selector
            android:id="@+id/selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content">

            <ViewStub android:id="@+id/content_header_pager_stub"
                      android:inflatedId="@+id/content_header_pager"
                      android:layout="@layout/content_header"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

            <ViewStub android:id="@+id/content_header_static_pager_stub"
                      android:inflatedId="@+id/content_header_static_pager"
                      android:layout="@layout/content_header_static"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

            <ViewStub android:id="@+id/content_header_user_pager_stub"
                      android:inflatedId="@+id/content_header_user_pager"
                      android:layout="@layout/content_header_user"
                        android:background="@color/tomahawk_red"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
        </FrameLayout>

        <com.github.rahatarmanahmed.cpv.CircularProgressView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/circularprogressview_pager"
                android:layout_width="@dimen/menu_item_height"
                android:layout_height="@dimen/menu_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                app:cpv_color="@color/tomahawk_red"
                app:cpv_thickness="2dp"
                app:cpv_indeterminate="true"
                app:cpv_animAutostart="true"/>

    </LinearLayout>

</FrameLayout>