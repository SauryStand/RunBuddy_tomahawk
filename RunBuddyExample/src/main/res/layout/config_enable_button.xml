<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/config_enable_button"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:background="@drawable/selectable_background_tomahawk_red"
              android:padding="@dimen/padding_small"
              android:layout_margin="@dimen/padding_medium">

    <TextView android:id="@+id/config_enable_button_text"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_gravity="center_vertical"
              android:paddingRight="@dimen/padding_small"
              android:textSize="@dimen/text_size_medium"
              android:textColor="@color/tomahawk_red"
              android:text="@string/resolver_config_enable_button_enable"/>

    <ImageView android:id="@+id/config_enable_button_image"
               android:layout_width="@dimen/row_height_medium"
               android:layout_height="@dimen/row_height_medium"
               android:layout_gravity="center_vertical"
               android:src="@drawable/ic_hatchet_white"/>

</LinearLayout>