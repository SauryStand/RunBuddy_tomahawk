<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"></include>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="50dp">

        <com.github.glomadrian.dashedcircularprogress.DashedCircularProgress
            android:id="@+id/simple_circle"
            android:layout_width="212dp"
            android:layout_height="219dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            app:base_color="@color/pager_base_color"
            app:duration="1000"
            app:external_color="#1affffff"
            app:max="100"
            app:min="0"
            app:progress_color="@color/material_pink"
            app:progress_icon="@drawable/android"></com.github.glomadrian.dashedcircularprogress.DashedCircularProgress>

        <ImageButton
            android:id="@+id/step_counting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/running_48px" />

        <TextView
            android:id="@+id/textView_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/step_counting_btn"
            android:layout_centerHorizontal="true"
            android:text="testing" />


    </RelativeLayout>

    <!--ExpandableListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_gravity="center_horizontal|bottom" /-->

    <Button
        android:id="@+id/Map_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:text="@string/map" />

    <Button
        android:id="@+id/charts_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Charts_info" />

    <Button
        android:id="@+id/ble_conn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:text="Ble connect" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal|bottom"
        android:clipChildren="false"
        android:paddingLeft="-12dp"
        android:paddingRight="-12dp" />


</FrameLayout>