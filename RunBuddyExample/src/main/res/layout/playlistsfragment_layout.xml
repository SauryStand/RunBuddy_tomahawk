<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fragment_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ViewStub android:id="@+id/imageview_grid_one_stub"
              android:inflatedId="@+id/imageview_grid_one"
              android:layout="@layout/imageview_grid_one_content_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <ViewStub android:id="@+id/imageview_grid_two_stub"
              android:inflatedId="@+id/imageview_grid_two"
              android:layout="@layout/imageview_grid_two_content_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <ViewStub android:id="@+id/imageview_grid_three_stub"
              android:inflatedId="@+id/imageview_grid_three"
              android:layout="@layout/imageview_grid_three_content_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <ViewStub android:id="@+id/listview_stub"
              android:inflatedId="@+id/listview"
              android:layout="@layout/listview"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>

    <ViewStub android:id="@+id/content_header_stub"
              android:inflatedId="@+id/content_header"
              android:layout="@layout/content_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <ViewStub android:id="@+id/content_header_static_stub"
              android:inflatedId="@+id/content_header_static"
              android:layout="@layout/content_header_static"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <ViewStub android:id="@+id/content_header_user_stub"
              android:inflatedId="@+id/content_header_user"
              android:layout="@layout/content_header_user"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <LinearLayout android:id="@+id/create_new_button"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/row_height_medium"
                  android:layout_gravity="center_horizontal"
                  android:orientation="horizontal"
                  android:background="@drawable/selectable_background_button_white"
                  android:visibility="gone">

        <TextView android:id="@+id/single_line_list_menu_textview"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:paddingLeft="@dimen/padding_small"
                  android:paddingRight="@dimen/padding_small"
                  android:ellipsize="marquee"
                  android:singleLine="true"
                  android:textColor="@color/primary_textcolor_inverted"
                  android:textSize="@dimen/text_size_micro"
                  android:text="@string/create_new"
                  android:textAllCaps="true"/>

        <ImageView android:id="@+id/icon_menu_imageview"
                   android:layout_width="14dp"
                   android:layout_height="14dp"
                   android:layout_gravity="center_vertical"
                   android:adjustViewBounds="false"
                   android:scaleType="centerCrop"
                   android:src="@drawable/ic_action_playlist"/>

    </LinearLayout>

</FrameLayout>