<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout android:id="@+id/selected_item_container"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/show_context_menu_icon_height"
                  android:paddingLeft="@dimen/padding_large"
                  android:paddingRight="@dimen/padding_large"
                  android:background="@drawable/selectable_background_tomahawk_halftransparent_inverted">

        <TextView android:id="@+id/textview_selected"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:textColor="@color/primary_textcolor_inverted"
                  android:textSize="@dimen/text_size_medium"
                  android:singleLine="true"/>

        <ImageView android:id="@+id/imageview_selected"
                   android:layout_width="@dimen/selector_icon_height"
                   android:layout_height="@dimen/selector_icon_height"
                   android:layout_marginLeft="@dimen/padding_medium"
                   android:layout_gravity="center"
                   android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/dropdown_items_container"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"/>

</LinearLayout>